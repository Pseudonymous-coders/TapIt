<android.support.percent.PercentRelativeLayout
    android:id="@+id/menu_panel"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait"
    android:background="@color/colorPrimaryDark"
    android:visibility="visible">


    <TextView
        android:id="@+id/difficultyButton"
        android:background="#F3BD75"
        android:layout_width="match_parent"
        app:layout_heightPercent="25%"
        android:gravity="center"
        android:text="Difficulty"
        android:theme="@style/baseSettingsButton"/>

    <TextView
        android:id="@+id/gamemodeButton"
        android:background="#FF89AB"
        android:layout_width="match_parent"
        app:layout_heightPercent="25%"
        android:layout_below="@id/difficultyButton"
        android:gravity="center"
        android:text="Gamemode"
        android:theme="@style/baseSettingsButton"/>

    <TextView
        android:id="@+id/soundButton"
        android:background="#7FEDEE"
        android:layout_width="match_parent"
        app:layout_heightPercent="25%"
        android:layout_below="@id/gamemodeButton"
        android:gravity="center"
        android:text="Sound"
        android:theme="@style/baseSettingsButton"/>
    <TextView
        android:id="@+id/infoButton"
        android:background="#B5DD7A"
        android:layout_width="match_parent"
        app:layout_heightPercent="25%"
        android:layout_below="@id/soundButton"
        android:gravity="center"
        android:text="Info"
        android:theme="@style/baseSettingsButton"/>


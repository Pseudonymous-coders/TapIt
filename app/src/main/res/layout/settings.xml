<android.support.percent.PercentRelativeLayout
    android:id="@+id/menu_panel"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait"
    android:background="@color/colorPrimaryDark"
    android:visibility="visible">


    <ImageView
        android:id="@+id/easyButton"
        app:layout_widthPercent="33.33%"
        app:layout_heightPercent="20%"
        android:src="@drawable/easy"
        android:background="@color/green"/>
    <ImageView
        android:id="@+id/mediumButton"
        app:layout_widthPercent="33.33%"
        app:layout_heightPercent="20%"
        android:layout_toRightOf="@id/easyButton"
        android:src="@drawable/medium"
        android:background="@color/orange"/>
    <ImageView
        android:id="@+id/hardButton"
        app:layout_widthPercent="33.33%"
        app:layout_heightPercent="20%"
        android:layout_toRightOf="@id/mediumButton"
        android:src="@drawable/hard"
        android:background="@color/red"/>
    <ImageView
        android:id="@+id/soundButton"
        app:layout_widthPercent="50%"
        app:layout_heightPercent="20%"
        android:layout_below="@id/easyButton"
        android:src="@drawable/vol_off"
        android:background="@color/blue"/>
    <ImageView
        android:id="@+id/vibrationButton"
        app:layout_widthPercent="50%"
        app:layout_heightPercent="20%"
        android:layout_toRightOf="@id/soundButton"
        android:layout_below="@id/hardButton"
        android:src="@drawable/vibrate"
        android:background="@color/brown"/>

    <!--<view-->
        <!--android:id="@+id/difficultyBar"-->
        <!--android:layout_width="match_parent"-->
        <!--app:layout_heightPercent="20%"-->
        <!--android:layout_below="@id/restartButton">-->
    <!--</view>-->

</android.support.percent.PercentRelativeLayout>

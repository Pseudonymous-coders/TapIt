<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fullscreen_content"
    tools:context="org.pseudonymous.tapit.MainActivity"
    android:screenOrientation="portrait">

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/GameHeader"
        android:layout_width="match_parent"
        app:layout_heightPercent="20%"
        android:background="@color/colorPrimaryDark"
        >
        <ImageButton
            android:id="@+id/SettingsButton"
            app:layout_widthPercent="20%"
            app:layout_heightPercent="50%"
            android:layout_toRightOf="@+id/CurScoreHeader"
            android:theme="@style/SettingsCog"
            android:src="@drawable/cog"
            />
        <TextView
            android:id="@+id/CurScoreHeader"
            android:text="SCORE"
            app:layout_widthPercent="40%"
            app:layout_heightPercent="35%"
            android:paddingLeft="20dp"
            android:theme="@style/CurScoreHeader"
            />
        <TextView
            android:id="@+id/HighScoreHeader"
            android:text="HIGH SCORE"
            android:gravity="right"
            app:layout_widthPercent="40%"
            app:layout_heightPercent="20%"
            android:paddingRight="10dp"
            android:theme="@style/HighScoreHeader"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <org.pseudonymous.tapit.components.ScoreText
            android:id="@+id/cur_score"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:includeFontPadding="false"
            android:paddingStart="5dp"
            android:text="@string/CurScore"
            android:textAlignment="center"
            android:theme="@style/CurScore"
            app:layout_heightPercent="65%"
            app:layout_widthPercent="35%" />

        <org.pseudonymous.tapit.components.ScoreText
            android:id="@+id/high_score"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/HighScoreHeader"
            android:gravity="end"
            android:includeFontPadding="false"
            android:paddingEnd="10dp"
            android:paddingStart="0dp"
            android:text="0"
            android:theme="@style/HighScore"
            app:layout_heightPercent="30%"
            app:layout_widthPercent="65%" />
    </android.support.percent.PercentRelativeLayout>

    <org.pseudonymous.tapit.engine.GameSurfaceView
        android:id="@+id/game_view"
        app:layout_heightPercent="100%"
        android:layout_width="match_parent"
        android:layout_below="@id/GameHeader" />

    <org.pseudonymous.tapit.components.StartButton
        android:layout_width="fill_parent"
        app:layout_heightPercent="30%"
        android:layout_alignParentBottom="true"
        android:layout_height="200dp"
        android:layout_gravity="bottom"
        android:text="start"
        android:theme="@style/StartButton"
        android:id="@+id/start_button"/>

</android.support.percent.PercentRelativeLayout>

<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/red</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="baseHeader" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="CurScoreHeader" parent="baseHeader">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="HighScoreHeader" parent="baseHeader">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="CurScore" parent="baseHeader">
        <item name="android:textSize">80sp</item>
    </style>

    <style name="HighScore" parent="baseHeader">
        <item name="android:textSize">30sp</item>
    </style>
    
    <style name="SettingsCog" parent="android:Widget.ImageButton">
        <item name="android:background">@color/green</item>
    </style>
    
    <style name="baseSettingsButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">@color/light_brown</item>
    </style>

    <style name="restartButton" parent="baseSettingsButton">
        <item name="android:background">@color/green</item>
    </style>
    <style name="difficultyButton" parent="baseSettingsButton">
        <item name="android:background">@color/green</item>
    </style>

    <!-- The theme of the start button on the user frame -->
    <style name="StartButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:colorButtonNormal">@color/colorSecondary</item>
        <item name="android:colorControlHighlight">@color/colorSecondary</item>
        <item name="android:textColor">@color/colorPrimaryDarkText</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">50sp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

</resources>
